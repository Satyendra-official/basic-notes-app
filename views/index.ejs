<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Notes App</title>
    <script src="https://cdn.jsdelivr.net/npm/@tailwindcss/browser@4"></script>
</head>

<body>
    <!-- <h1 class="text-3xl font-bold underline">Hello</h1> -->

    <div class="main w-full min-h-screen bg-zinc-900">
        <div class="form p-10 text-white">
            <form action="/create" method="post">
                <input class="block px-5 py-2 bg-zinc-800 w-full rounded-lg outline-none" type="title"
                    placeholder="Enter the title here..." name="title">
                <textarea class="block px-5 py-2 bg-zinc-800 w-full rounded-lg outline-none resize-none mt-2" name="desc"
                    id="" placeholder="Enter the description here "></textarea>
                <input class="mt-2 bg-blue-600 px-5 py-2 rounded-md" type="submit" value="Save">
            </form>
        </div>
        <div class="tasks p-10 flex gap-5 flex-wrap">
            <% if(files.length> 0) { %>
                <% files.forEach(function (val) { %>
                    <div class="task bg-zinc-800  min-w-80 px-3 py-4 rounded-md">
                        <h1 class="text-white text-3xl tracking-tighter "><%= val %></h1>
                        <div class="flex justify-between mt-3">
                        <a class="text-blue-500 inline-block " href="/files/<%= val %>">Read more..</a>
                        <a class="text-zinc-600 inline-block " href="/edit/<%= val %>">Edit</a>
                        </div>
                    </div>
            <% }); %>
            <% } else { %>
                <h3 class="text-zinc-600">No tasks yet added.</h3>
            <% } %>
        </div>
    </div>
</body>

</html>